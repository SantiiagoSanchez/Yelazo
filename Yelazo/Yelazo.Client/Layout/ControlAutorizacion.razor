<link href="css/Sesion.css" rel="stylesheet" />

<AuthorizeView>
    <Authorized>

        <div class="user-bar d-flex align-items-center gap-3">

            <!-- Avatar + Nombre -->
            <div class="user-pill d-flex align-items-center gap-2 px-3 py-1">
                <div class="avatar-circle">
                    @context.User.Identity!.Name![0]
                </div>

                <div class="user-label">
                    Hola, <strong>@context.User.Identity!.Name</strong>
                </div>
            </div>

            <!-- Cerrar sesión -->
            <a href="logout" class="logout-pill d-flex align-items-center gap-2 px-3 py-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="#dc3545" class="icon-logout">
                    <path fill-rule="evenodd"
                          d="M10 12a.5.5 0 0 1-.5-.5V10H4.707l2.147
                          2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0
                          1 0-.708l3-3a.5.5 0 1 1 .708.708L4.707
                          9H9.5V6.5a.5.5 0 0 1 1
                          0v5A.5.5 0 0 1 10 12z" />
                    <path d="M13.5 15A1.5 1.5 0 0 0 15
                          13.5v-11A1.5 1.5 0 0 0 13.5
                          1h-8A1.5 1.5 0 0 0 4
                          2.5v2a.5.5 0 0 0 1
                          0v-2A.5.5 0 0 1 5.5
                          2h8a.5.5 0 0 1 .5.5v11a.5.5
                          0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5
                          0 0 0-1 0v2A1.5 1.5 0 0 0 5.5 15h8z" />
                </svg>
                <span>Cerrar sesión</span>
            </a>

        </div>

    </Authorized>

    <NotAuthorized>
        <a href="registrar" class="nav-link btn btn-link">Registrarse</a>
        <a href="login" class="nav-link btn btn-link">Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>

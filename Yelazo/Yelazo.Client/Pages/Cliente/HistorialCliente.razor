@page "/clientes/historial/{UsuarioId}"
@inject IHttpServicio http

<h3>Historial de Pedidos</h3>

@if (error)
{
    <div class="alert alert-danger">Error al cargar pedidos.</div>
}
else if (pedidos == null)
{
    <p>Cargando pedidos...</p>
}
else if (pedidos.Count == 0)
{
    <div class="alert alert-success">
        No hay pedidos para este cliente.
    </div>
}
else
{
    @foreach (var pedido in pedidos)
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <strong>Pedido #@pedido.Id</strong>
            </div>

            <div class="card-body">
                <p><strong>Fecha:</strong> @pedido.FechaPedido.ToString("dd/MM/yyyy")</p>
                <p><strong>Total:</strong> @pedido.Total $</p>
                <p><strong>Estado:</strong> @pedido.Estado</p>

                <hr />

                <h5>Detalles del Pedido</h5>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in pedido.Detalles)
                        {
                            <tr>
                                <td>@detalle.NombreProducto</td>
                                <td>@detalle.Cantidad</td>
                                <td>@detalle.Total $</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

@code {
    [Parameter] public string UsuarioId { get; set; }

    private List<GetHistorialPedidosDTO> pedidos;
    private bool error = false;

    protected override async Task OnInitializedAsync()
    {
        var resultado = await http.Get<List<GetHistorialPedidosDTO>>($"api/Cliente/historial/{UsuarioId}");

        if (resultado.Error)
        {
            error = true;
        }
        else
        {
            pedidos = resultado.Respuesta;
        }
    }
}
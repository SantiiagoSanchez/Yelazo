@page "/registrar/cliente"
@inject IHttpServicio http
@inject NavigationManager navigationManager
@inject IJSRuntime js
@inject ILoginService loginService

<h3>Registrar nuevo usuario</h3>

<EditForm Model="@userInfo" OnValidSubmit="CrearUsuario">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <InputText id="nombre" class="form-control" placeholder="Ejemplo: Jhon" @bind-Value="userInfo.Nombre" />
        <ValidationMessage For="@(() => userInfo.Nombre)" />
    </div>

    <div class="mb-3">
        <label for="apellido" class="form-label">Apellido</label>
        <InputText id="apellido" class="form-control" placeholder="Ejemplo: Doe" @bind-Value="userInfo.Apellido" />
        <ValidationMessage For="@(() => userInfo.Apellido)" />
    </div>

    <div class="mb-3">
        <label for="telefono" class="form-label">Teléfono</label>
        <InputText id="telefono" class="form-control" placeholder="+12 345-6789101" @bind-Value="userInfo.Telefono" />
        <ValidationMessage For="@(() => userInfo.Telefono)" />
    </div>

    <div class="mb-3">
        <label for="direccion" class="form-label">Dirección</label>
        <InputText id="direccion" class="form-control" placeholder="Ejemplo: Velez Sarfield 2784" @bind-Value="userInfo.Direccion" />
        <ValidationMessage For="@(() => userInfo.Direccion)" />
    </div>

    <div class="mb-3">
        <label for="zona" class="form-label">Zona</label>
        <InputSelect id="zona" class="form-select" @bind-Value="userInfo.Zona">
            <option value="">Seleccione una zona</option>
            <option value="Norte">Norte</option>
            <option value="Sur">Sur</option>
        </InputSelect>
        <ValidationMessage For="@(() => userInfo.Zona)" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" class="form-control" placeholder="example@example.com" @bind-Value="userInfo.Email" />
        <ValidationMessage For="@(() => userInfo.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" placeholder="Ingrese su contraseña" class="form-control" @bind-Value="userInfo.Password" />
        <ValidationMessage For="@(() => userInfo.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
    <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
</EditForm>

@code {
    private UserInfoDTO userInfo = new();



    protected override void OnInitialized()
    {
        // Estado por defecto "Activo"
        userInfo.Estado = true;
    }


    private async Task CrearUsuario()
    {
        var resultado = await http.Post<UserInfoDTO, object>("api/Cliente/registrar", userInfo);

        if (resultado.Error)
        {
            var msg = await resultado.ObtenerError();
            await js.Confirmar(msg);
        }
        else
        {
            await js.Confirmar("Cliente registrado correctamente.");
            navigationManager.NavigateTo("/clientes");
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/clientes");
    }
}
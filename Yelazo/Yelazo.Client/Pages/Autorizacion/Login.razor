@page "/"
@inject IHttpServicio http
@inject NavigationManager navigationManager
@inject IJSRuntime js
@inject ILoginService loginService
@layout EmptyLayout
@using System.IdentityModel.Tokens.Jwt;
@using System.Security.Claims;

<style>
    /* Fondo con imagen */
    body, html {
        height: 100%;
        margin: 0;
    }

    .login-background {
        background-image: url('/fondo-login.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Tarjeta central */
    .login-card {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        width: 350px;
        max-width: 90%;
    }

    /* Título */
    .login-title {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #345874; 
        font-weight: bold;
    }

    .btn-primary {
        width: 100%;
    }
</style>

<div class="login-background">
    <div class="login-card">
        <h3 class="login-title">Iniciar Sesión</h3>

        <EditForm Model="@userInfo" OnValidSubmit="Loguear">
            <DataAnnotationsValidator />
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText id="email" class="form-control" @bind-Value="userInfo.Email" />
                <ValidationMessage For="@(() => userInfo.Email)" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="userInfo.Password" />
                <ValidationMessage For="@(() => userInfo.Password)" />
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </EditForm>
    </div>
</div>

@code {
    private UserLoginDTO userInfo = new UserLoginDTO();


    private async Task Loguear()
    {
        var resultado = await http.Post<UserLoginDTO, UserTokenDTO>("api/Usuario/login", userInfo);
        if (resultado.Error)
        {
            var msg = await resultado.ObtenerError();
            await js.Confirmar(msg);
        }
        else
        {
            var UserToken = resultado.Respuesta as UserTokenDTO;
            if (UserToken != null)
            {
                await loginService.Login(UserToken);

                // Leer rol del token
                var rol = ObtenerRolDesdeToken(UserToken.Token);

                if (rol == "cliente")
                {
                    navigationManager.NavigateTo("/registrar"); //Aca va a la pagina de la tienda.
                }
                else
                {
                    navigationManager.NavigateTo("/inicio");
                }
            }
            else
            {
                await js.Confirmar("No se pudo obtener el token");
            }
        }
    }

    private string ObtenerRolDesdeToken(string token)
    {
        if (string.IsNullOrWhiteSpace(token))
            return string.Empty;

        var handler = new JwtSecurityTokenHandler();
        var jwtToken = handler.ReadJwtToken(token);

        var rolClaim = jwtToken.Claims.FirstOrDefault(c =>
            c.Type == ClaimTypes.Role ||
            c.Type == "role" ||
            c.Type.EndsWith("/role"));

        return rolClaim?.Value ?? string.Empty;
    }
}


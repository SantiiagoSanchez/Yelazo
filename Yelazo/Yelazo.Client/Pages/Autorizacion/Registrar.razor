@page "/registrar"
@inject IHttpServicio http
@inject NavigationManager navigationManager
@inject IJSRuntime js
@inject ILoginService loginService

<link href="css/DiseñoModalCompartido.css" rel="stylesheet" />

<div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-dark bg-opacity-50" style="z-index: 1050;">
    <div class="modal-contenedor">

        <!-- Botón de cerrar -->
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Cerrar" @onclick="Cancelar"></button>

        <!-- Título -->
        <h5 class="fw-semibold mb-1">Registrar nuevo usuario</h5>

        <EditForm Model="userInfo" OnValidSubmit="CrearUsuario">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-grid">

                <div>
                    <label class="form-label">Nombre *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" placeholder="Ejemplo: Jhon" @bind-Value="userInfo.Nombre" />
                    </div>
                </div>

                <div>
                    <label class="form-label">Apellido *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" placeholder="Ejemplo: Doe" @bind-Value="userInfo.Apellido" />
                    </div>
                </div>

                <div>
                    <label class="form-label">Teléfono *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" placeholder="+12 345-6789101" @bind-Value="userInfo.Telefono" />
                    </div>
                </div>

                <div>
                    <label class="form-label">Dirección *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" placeholder="Ejemplo: Velez Sarfield 2784" @bind-Value="userInfo.Direccion" />
                    </div>
                </div>



                <div class="full-row">
                    <label class="form-label">Email *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" placeholder="example@example.com" @bind-Value="userInfo.Email" />
                    </div>
                </div>

                <div class="full-row">
                    <label class="form-label">Contraseña *</label>
                    <div class="precio-group d-flex">
                        <InputText class="form-control precio-input" id="password" type="password" placeholder="Ingrese su contraseña" @bind-Value="userInfo.Password" />
                    </div>
                </div>

            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-end border-top pt-3 gap-2 mt-3">
                <button type="button" class="btn btn-light btn-lg" @onclick="Cancelar">Cancelar</button>
                <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
            </div>

        </EditForm>

    </div>
</div>

@code {
    private UserInfoDTO userInfo = new();

    private async Task CrearUsuario()
    {
        var resultado = await http.Post<UserInfoDTO, UserTokenDTO>("api/Usuario/registrar", userInfo);

        if (resultado.Error)
        {
            var msg = await resultado.ObtenerError();
            await js.Confirmar(msg);
        }
        else
        {
            var token = resultado.Respuesta;
            if (token != null)
            {                
                navigationManager.NavigateTo("/usuarios");
            }
            else
            {
                await js.Confirmar("No se pudo obtener el token");
            }
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/usuarios");
    }
}

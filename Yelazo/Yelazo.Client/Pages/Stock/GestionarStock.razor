@page "/stock/gestionar"
@inject IHttpServicio http
@inject NavigationManager navigationManager


<link href="css/GestionarStock.css " rel="stylesheet" />

<div class="container-fluid p-0">
    <h3 class="fw-bold text-dark mb-4">Gestión de Stock</h3>

    <div class="mb-4">
        @if (listaProducto != null && listaProducto.Count > 0)
        {
            <div class="table-responsive" style="padding: 10px;">
                <table class="table-rounded align-middle">
                    <thead class="thead-custom">
                        <tr>
                            <th class="ps-4">TIPO DE BOLSA (x KG)</th>
                            <th class="text-center">CANTIDAD</th>
                            <th class="text-end pe-4">ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listaProducto)
                        {
                            <tr class="fila-producto">
                                <td class="ps-4">
                                    <div class="nombre-producto">@item.Nombre</div>
                                    <div class="descripcion-producto">@item.Presentacion</div>
                                </td>
                                <td class="text-center">
                                    <span class="cantidad-numero">@item.Cantidad</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="/stock/editar/@item.Id" class="btn-accion btn-azul" title="Modificar cantidad">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end align-items-center mt-3">
        <button class="btn btn-historial" @onclick="VisualizarHistorial">
            <i class="bi bi-clock-history me-2"></i> Ver Historial
        </button>
    </div>
</div>

@code {
    // ... Tu código C# se mantiene igual ...
    List<Producto> listaProducto = new List<Producto>();
    string Mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private void VisualizarHistorial()
    {
        navigationManager.NavigateTo("/historial-stock");
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Producto>>("api/Productos");
        if (!resp.Error) { listaProducto = resp.Respuesta; }
        else { Mensaje = "Error"; }
    }
}
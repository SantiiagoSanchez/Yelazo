@page "/stock/editar/{ProductoId:int}"
@inject NavigationManager navigationManager
@inject IHttpServicio http


<link href="css/EditarStock.css" rel="stylesheet" />

<div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-dark bg-opacity-50" style="z-index: 1050;">
    <div class="modal-contenedor">

        <!-- Botón de cerrar -->
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Cerrar" @onclick="Cancelar"></button>

        <!-- Título -->
        <h5 class="fw-semibold mb-1">Editar stock</h5>
        <p class="text-muted mb-4">Registra nueva entrada/salida de inventario</p>

        <EditForm Model="producto" OnValidSubmit="Grabar">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Producto -->
            <h6 class="fw-bold">Producto*</h6>

            <div class="form-control">
                <i class="bi bi-box-seam producto-icon"></i>

                <span class="producto-header-text">@producto.Nombre @producto.Presentacion</span>
            </div>

            <!-- STOCK ACTUAL (mejorado) -->
            <div class="stock-box">
                <i class="bi bi-exclamation-circle stock-icon"></i>
                <div>
                    <strong>Stock actual:</strong> @producto.Cantidad unidades
                </div>
            </div>

            <!-- Movimiento -->
            <h6 class="fw-bold mt-3">Movimiento*</h6>

            <div class="select-wrapper">
                <InputSelect class="select-modern" @bind-Value="movimiento">
                    <option value="">Seleccione...</option>
                    <option value="Entrada">Ingreso</option>
                    <option value="Salida">Egreso</option>
                </InputSelect>
            </div>

            @if (error)
            {
                <div class="text-danger mt-1">
                    Debe seleccionar un tipo de movimiento.
                </div>
            }

            <!-- Cantidad -->
            <div class="mb-3 mt-3">
                <h6 class="fw-bold">Cantidad*</h6>
                <InputNumber class="form-control" @bind-Value="cantidad" />
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-end border-top pt-3 gap-2">
                <button type="button" class="btn btn-light" @onclick="Cancelar">Cancelar</button>

                <button type="submit" class="btn btn-primary d-flex align-items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                        <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0" />
                    </svg>
                    Editar Stock
                </button>
            </div>
        </EditForm>
    </div>
</div>


@code {
    Producto producto = new Producto();
    int cantidad;
    string movimiento;
    bool error = false;
    [Parameter] public int productoId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Mostrar();
    }

    private async Task Mostrar()
    {
        var respuesta = await http.Get<Producto>($"api/Productos/{productoId}");
        if (!respuesta.Error)
        {
            producto = respuesta.Respuesta;
        }
    }

    private async Task Grabar()
    {
        if (string.IsNullOrWhiteSpace(movimiento))
        {
            error = true;
        }
        else
        {
            error = false;

            Stock registro = new Stock
                {
                    ProductoId = productoId,
                    FechaActualizacio = DateTime.Today,
                    Cantidad = cantidad,
                    Movimiento = movimiento
                };

            var HttpRespuesta = await http.Post<Stock, int>("api/Stock", registro);
            navigationManager.NavigateTo("/stock/gestionar");
        }
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/stock/gestionar");
    }
}

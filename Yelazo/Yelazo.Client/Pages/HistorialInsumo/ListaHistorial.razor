@page "/historial-insumo"
@inject IHttpServicio http
@inject NavigationManager navigationManager

<h3>ListaHistorial</h3>
<div class="table-responsive">
    <table class="table align-middle table-hover">
        <thead class="table-light">
            <tr>
                <th class="text-uppercase small">ID Mov.</th>
                <th class="text-uppercase small">Fecha</th>
                <th class="text-uppercase small">Insumo</th>
                <th class="text-uppercase small">Cantidad</th>
                <th class="text-uppercase small">Precio</th>
            </tr>
        </thead>
        <tbody>
            @if (listaInsumo == null)
            {
                <tr><td colspan="4" class="text-center text-muted">Buscando registros ...</td></tr>
            }
            else if (listaInsumo.Count == 0)
            {
                <tr><td colspan="4" class="text-center text-muted">No se encontraron registros cargados.</td></tr>
            }
            else
            {
                @foreach (var item in listaInsumo)
                {
                    <tr>
                        <td>@item.Id.ToString("D3")</td>
                        <td>@item.Fecha</td>
                        <td>@item.Insumo.Nombre</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Precio</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@code {

    List<IngresoInsumo> listaInsumo = new List<IngresoInsumo>();
    string Mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();

    }

    private async Task Leer()
    {
        Mensaje = "";
        listaInsumo = new List<IngresoInsumo>();


        var resp = await http.Get<List<IngresoInsumo>>("api/IngresoInsumo");

        if (!resp.Error && resp.Respuesta != null)
        {
            listaInsumo = resp.Respuesta;

            if (listaInsumo.Count == 0)
            {
                Mensaje = "No se encontraron registros para la fecha seleccionada.";
            }
        }
        else
        {
            Mensaje = "Error al obtener datos.";
        }
    }
}

@page "/gastos"
@inject IHttpServicio http

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold m-0">Gestión de gastos</h3>
    <a class="btn btn-primary" href="/gastos/crear">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
        </svg> Nuevo gasto
    </a>
</div>

<!-- Tarjetas resumen -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="border rounded p-3 text-center">
            <h6 class="text-muted m-0">Total gastos</h6>
            <h5 class="fw-bold mt-2">24</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border rounded p-3 text-center">
            <h6 class="text-muted m-0">Stock e inventario</h6>
            <h5 class="fw-bold mt-2 text-danger">$1,250.00</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border rounded p-3 text-center">
            <h6 class="text-muted m-0">Combustible (mes)</h6>
            <h5 class="fw-bold mt-2 text-warning">$850.00</h5>
        </div>
    </div>
    <div class="col-md-3">
        <div class="border rounded p-3 text-center">
            <h6 class="text-muted m-0">Último mantenimiento</h6>
            <h5 class="fw-bold mt-2 text-success">Hace 5 días</h5>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="row mb-3">



    <!--Gastos obviamente hay que cambiar y hacerlo con logica-->
    <div class="col-md-4 mb-2">
        <select class="form-select">
            <option selected>Tipo de gasto</option>
            <option value="1">Combustible</option>
            <option value="2">Inventario</option>
            <option value="3">Mantenimiento</option>
        </select>
    </div>
    <!--Meses, creo que no hace falta cambiarlo-->
    <div class="col-md-4 mb-2">
        <select class="form-select">
            <option selected>Último mes</option>
            <option value="1">Enero</option>
            <option value="2">Febrero</option>
            <option value="3">Marzo</option>
            <option value="4">Abril</option>
            <option value="5">Mayo</option>
            <option value="6">Junio</option>
            <option value="7">Julio</option>
            <option value="8">Agosto</option>
            <option value="9">Septiembre</option>
            <option value="10">Octubre</option>
            <option value="11">Noviembre</option>
            <option value="12">Diciembre</option>       
        </select>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Descripcion</th>
            <th>Costo</th>
            <th>Proveedor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @if (listaGastos == null)
        {
            <p>Buscando gastos ...</p>
        }
        else if (listaGastos.Count == 0)
        {
            <p>No se encontraron gastos cargados.</p>
        }
        @foreach (var item in listaGastos)
        {
            <tr>
                <td>@item.Fecha</td>
                <td>@item.TipoGasto.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Costo</td>
                <td>@item.Proveedor.Nombre</td>
                <td>
                    <a class="btn btn-primary" href="/gastos/editar/@item.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }


    </tbody>

</table>



@code {
    List<Gasto> listaGastos = new List<Gasto>();
    string Mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Leer();
    }

    private async Task Leer()
    {
        var resp = await http.Get<List<Gasto>>("api/Gastos");

        if (!resp.Error)
        {
            listaGastos = resp.Respuesta;
        }
        else
        {
            Mensaje = "Error";
        }
    }
}

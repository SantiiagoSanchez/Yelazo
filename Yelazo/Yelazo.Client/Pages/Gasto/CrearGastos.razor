@page "/gastos/crear"
@inject NavigationManager navigationManager
@inject IHttpServicio http

<link href="css/DiseñoModalCompartido.css" rel="stylesheet" />

<div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-dark bg-opacity-50" style="z-index: 1050;">
    <div class="modal-contenedor">

        <!-- Botón de cerrar -->
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Cerrar" @onclick="Cancelar"></button>

        <!-- Título -->
        <h5 class="fw-semibold mb-1">Nuevo gasto</h5>
        <p class="text-muted mb-4">Registra un nuevo gasto</p>

        <EditForm Model="gasto" OnValidSubmit="Grabar">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Información del gasto -->
            <h6 class="fw-bold mb-3 pb-2 border-bottom">Información del gasto</h6>

            <div class="mb-3">
                <label class="form-label">Fecha *</label>
                <div class="precio-group d-flex">
                    <InputDate class="form-control form-control-lg shadow-sm border-0" @bind-Value="gasto.Fecha" />
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label">Tipo de gasto *</label>
                <div class="precio-group d-flex">
                    <InputSelect class="form-select form-control-lg shadow-sm border-0 me-2" @bind-Value="gasto.TipoGastoId">
                        <option value="">Seleccione...</option>
                        @foreach (var tg in tipoGastos)
                        {
                            <option value="@tg.Id">@tg.Nombre</option>
                        }
                    </InputSelect>
                    <a href="/proveedor/crear" class="btn-plus" title="Nuevo tipo de gasto">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 1a.75.75 0 0 1 .75.75V7.25H14.25a.75.75 0 0 1 0 1.5H8.75v5.5a.75.75 0 0 1-1.5 0v-5.5H1.75a.75.75 0 0 1 0-1.5H7.25V1.75A.75.75 0 0 1 8 1z" />
                        </svg>
                    </a>

                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción *</label>
                <div class="precio-group d-flex">
                    <InputText class="form-control precio-input" @bind-Value="gasto.Descripcion" />
                </div>

            </div>

            <!-- Detalles del costo -->
            <h6 class="fw-bold mb-3 mt-4 pb-2 border-bottom">Detalles del costo</h6>

            <div class="mb-3">
                <label class="form-label">Costo *</label>
                <div class="precio-group d-flex">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                        <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73z" />
                    </svg>
                    <InputNumber class="form-control precio-input" @bind-Value="gasto.Costo" />
                </div>

            </div>

            <div class="mb-3">
                <label class="form-label">Proveedor *</label>
                <div class="precio-group d-flex">
                    <InputSelect class="form-select form-control-lg shadow-sm border-0 me-2" @bind-Value="gasto.ProveedorId">
                        <option value="">Seleccione...</option>
                        @foreach (var tg in proveedores)
                        {
                            <option value="@tg.Id">@tg.Nombre</option>
                        }
                    </InputSelect>
                    <a href="/proveedor/crear" class="btn-plus" title="Nuevo proveedor">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 1a.75.75 0 0 1 .75.75V7.25H14.25a.75.75 0 0 1 0 1.5H8.75v5.5a.75.75 0 0 1-1.5 0v-5.5H1.75a.75.75 0 0 1 0-1.5H7.25V1.75A.75.75 0 0 1 8 1z" />
                        </svg>
                    </a>

                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-end border-top pt-3 gap-2">
                <button type="button" class="btn btn-light btn-lg" @onclick="Cancelar">Cancelar</button>
                <button type="submit" class="btn btn-primary btn-lg">
                    Registrar Gasto
                </button>
            </div>
        </EditForm>
    </div>
</div>


@code {
    private CrearGastoDTO gasto = new CrearGastoDTO();
    private List<TipoGasto> tipoGastos = new List<TipoGasto>();
    private List<Proveedor> proveedores = new List<Proveedor>();

    protected override async Task OnInitializedAsync()
    {
        var HttpRespuestaGasto = await http.Get<List<TipoGasto>>("api/TipoGasto");
        if (!HttpRespuestaGasto.Error)
        {
            tipoGastos = HttpRespuestaGasto.Respuesta;
        }
        var HttpRespuestaProveedor = await http.Get<List<Proveedor>>("api/Proveedor");
        if (!HttpRespuestaProveedor.Error)
        {
            proveedores = HttpRespuestaProveedor.Respuesta;
        }
    }


    private async Task Grabar()
    {
        Gasto gastoEntity = new Gasto
        {
            Descripcion = gasto.Descripcion,
            Costo = gasto.Costo,
            Fecha = gasto.Fecha,
            tipoGastoId = gasto.TipoGastoId,
            ProveedorId = gasto.ProveedorId
        };

        var HttpRespuesta = await http.Post<Gasto, int>("api/Gastos", gastoEntity);
        if (HttpRespuesta.Error)
        {
            var Body = HttpRespuesta.HttpResponseMessage;
        }
        navigationManager.NavigateTo("/gastos");
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/gastos");
    }

}

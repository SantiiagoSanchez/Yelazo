@page "/pedidos"
@inject IHttpServicio http
@inject SweetAlertService swal
@inject NavigationManager navigationManager
@attribute [Authorize(Roles = "admin, repartidor")]

<link href="css/DiseñosCompartidos.css" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold m-0">Pedidos Activos</h3>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>N° Pedido</th>
            <th>Usuario</th>
            <th>Dirección</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Zona</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (listaPedidos == null)
        {
            <tr><td colspan="6">Cargando pedidos...</td></tr>
        }
        else if (listaPedidos.Count == 0)
        {
            <tr><td colspan="6">No hay pedidos activos.</td></tr>
        }
        else
        {
            @foreach (var pedido in listaPedidos)
            {
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.UsuarioNombre</td>
                    <td>@pedido.Direccion</td>
                    <td>@pedido.Total $</td>
                    <td>@pedido.Estado</td>
                    <td>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@pedido.Zona</td>
                    <td>
                        <button class="btn btn-info btn-sm text-white" @onclick="() => AbrirDetalles(pedido.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                            </svg>
                        </button>
                        <button class="btn btn-primary btn-sm" @onclick="() => cambiarEstado(pedido.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
                                <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5zm1.294 7.456A2 2 0 0 1 4.732 11h5.536a2 2 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456M12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                            </svg>
                        </button>
                        <button class="btn btn-success btn-sm" @onclick="() => RegistrarPago(pedido.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                                <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73z" />
                            </svg>
                        </button>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal de Detalles -->
@if (mostrarModal)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del Pedido</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar" @onclick="() => mostrarModal = false"></button>
                </div>
                <div class="modal-body">
                    @if (pedidoDetalles == null)
                    {
                        <p>Cargando detalles...</p>
                    }
                    else if (pedidoDetalles.Count == 0)
                    {
                        <p>No hay productos en este pedido.</p>
                    }
                    else
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var det in pedidoDetalles)
                                {
                                    <tr>
                                        <td>@det.NombreProducto</td>
                                        <td>@det.Cantidad</td>
                                        <td>@det.Total $</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="mt-3">
                            <p><strong>Estado:</strong> @pedidoDetalles[0].Estado</p>
                            <p><strong>Teléfono:</strong> @pedidoDetalles[0].TelefonoCliente</p>
                            <p><strong>Ubicación:</strong> @pedidoDetalles[0].Ubicacion</p>
                            <p><strong>Fecha del pedido:</strong> @pedidoDetalles[0].FechaPedido</p>
                        </div>

                        
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => mostrarModal = false">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    List<PedidoDTO> listaPedidos = new List<PedidoDTO>();
    List<DetallePedidoDTO> pedidoDetalles;
    public bool mostrarModal = false;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LeerPedidos();
    }

    private async Task LeerPedidos()
    {
        var resp = await http.Get<List<PedidoDTO>>("api/Pedido");

        if (!resp.Error)
        {
            listaPedidos = resp.Respuesta;
        }
        else
        {
            await swal.FireAsync("Error", "No se pudieron cargar los pedidos", SweetAlertIcon.Error);
        }
    }

    private async Task AbrirDetalles(int pedidoId)
    {
        pedidoDetalles = null; // Reset antes de cargar
        var resp = await http.Get<List<DetallePedidoDTO>>($"api/Pedido/detalle/{pedidoId}");

        if (!resp.Error)
        {
            pedidoDetalles = resp.Respuesta;

            mostrarModal = true;
        }
        else
        {
            await swal.FireAsync("Error", "No se pudieron cargar los detalles del pedido", SweetAlertIcon.Error);
        }
    }

    private async Task cambiarEstado(int id)
    {
        await http.Put<object>($"api/Pedido/en-camino/{id}", null);
        await LeerPedidos();
    }

    void RegistrarPago(int id)
    {
        navigationManager.NavigateTo($"/pago/registrar/{id}");
    }
}
